{
  "manifest_version": 3,
  "name": "4chan Thread Muncher v25-08-10",
  "version": "1.0",
  "description": "Monitors 4chan threads for media and uses 4chan API to download it.",
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "windows",
    "alarms",
	"downloads.shelf"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "trigger.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "dud.txt" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}