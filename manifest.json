{
  "manifest_version": 3,
  "name": "4chan Thread Muncher v25-08-14",
  "version": "1.0",
  "description": "Monitors 4chan threads for media and uses 4chan API to download it.",
  "permissions": [
    "storage",
    "downloads",
    "windows",
    "alarms",
    "downloads.shelf"
  ],
  "host_permissions": [
  "https://a.4cdn.org/",
  "https://i.4cdn.org/"
],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "trigger.html",
    "default_icon": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [ "dud.txt" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}